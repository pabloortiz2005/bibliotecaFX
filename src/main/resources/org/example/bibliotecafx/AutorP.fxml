<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="690.0" prefWidth="916.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.bibliotecafx.controladores.AutorController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <children>

        <!-- Título -->
        <Label text="Gestión de Libros" textFill="RED">
            <font>
                <Font name="Verdana Bold" size="36" />
            </font>
        </Label>

        <!-- Formulario para búsqueda -->
        <HBox alignment="CENTER" spacing="10">
            <Label text="Buscar por:" />
            <TextField fx:id="nombreBuscar" promptText="Nombre" />
            <Button text="Buscar" onAction="#buscarAutor" />
            <Button text="Listar Libros Disponibles" onAction="#a" />
        </HBox>

        <!-- Botones de acciones -->
        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="btnCrear" text="Añadir Libro" onAction="#crearNuevoAutor" />
            <Button fx:id="btnEditar" text="Editar Libro Seleccionado" onAction="#editarAutorSeleccionado" />
            <Button fx:id="btnEliminar" text="Eliminar Libro Seleccionado" onAction="#eliminarAutorSeleccionado" />
        </HBox>

        <!-- Tabla de resultados -->
        <TableView fx:id="tablaLibros" prefHeight="355.0" prefWidth="876.0">
            <columns>
                <TableColumn fx:id="colId" prefWidth="50" text="ID" />
                <TableColumn fx:id="colTitulo" prefWidth="200" text="Título" />
                <TableColumn fx:id="colAutor" prefWidth="150" text="Autor" />
                <TableColumn fx:id="colISBN" prefWidth="150" text="ISBN" />
                <TableColumn fx:id="colEditorial" prefWidth="150" text="Editorial" />
                <TableColumn fx:id="colAnyo" prefWidth="100" text="Año" />
            </columns>
        </TableView>
    </children>
</VBox>